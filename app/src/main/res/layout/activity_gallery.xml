        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200mdp"
            app:cardCornerRadius="@dimen/_12mdp"
            android:layout_margin="@dimen/_5mdp">

            <LinearLayout
                android:layout_width="match_parent"
